<div class="row" id="portada-tips">
    <div class="col-lg-12 col-xs-12 title">
        <p class="title">Tips y Consejos</p>
    </div>

</div>


<div class="row" id="tip">

    <div class="container">
        <div class="row">
            <div class="col-lg-10 col-lg-offset-1">
                <p class="date"><%= @tip.created_at.strftime('%d de %B %Y') %></p>
                <p class="title">
                    <%= @tip.titulo %>
                </p>
                <%= image_tag @tip.portada.url(:large) %>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-5 col-lg-offset-1">
                <div class="share fb" data-url="<%= tip_url(@tip) %>"></div>
                <div class="share pn" data-url="<%= tip_url(@tip) %>"></div>
                <div class="share tw" data-url="<%= tip_url(@tip) %>"></div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-10 col-lg-offset-1">
                <p class="author">por Administrador</p>
                <div class="contenido">
                    <%= raw(@tip.texto) %>
                </div>
            </div>
        </div>
    </div>
</div>




<div class="row" id="team_bottom">

    <div class="col-lg-12">
        <center>
            <a href="/"><%= image_tag 'btn_home.png' %></a>
        </center>
    </div>

</div>
