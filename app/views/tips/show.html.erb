<div class="row" id="portada-tips">
    <div class="col-lg-12 col-xs-12 title">
        <p class="title">Tips y Consejos</p>
    </div>

</div>


<div class="row" id="tip">

    <div class="container">
        <div class="row">
            <div class="col-lg-10 col-lg-offset-1">
                <p class="date"><%= @tip.created_at.strftime('%d de %B %Y') %></p>
                <p class="title">
                    <%= @tip.titulo %>
                </p>
                <%= image_tag @tip.portada.url(:large),size: @tip.portada.image_size(:large) %>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-5 col-lg-offset-1">

                <a href="http://www.facebook.com/sharer.php?s=100&p[title]=<%=@tip.titulo%>&p[url]=<%=tip_url(@tip)%>&p[images][0]=<%=@image%> target="_blank">
                    <div class="share fb"></div>
                </a>
                <a href="http://pinterest.com/pin/create/button/?url=<%= tip_url(@tip) %>&media=<%=@image%>" target="_blank">
                    <div class="share pn"></div>
                </a>
                <a href="https://twitter.com/share?url=<%=tip_url(@tip)%>&text=Nuevo en Viverelajacion: <%=@tip.titulo%>&hashtags=Viverelajacion"  target="_blank">
                    <div class="share tw"></div>
                </a>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-10 col-lg-offset-1">
                <p class="author">por Administrador</p>
                <div class="contenido">
                    <%= raw(@tip.texto) %>
                </div>
            </div>
        </div>
    </div>
</div>




<div class="row" id="team_bottom">

    <div class="col-lg-12">
        <center>
            <a href="/"><%= image_tag 'btn_home.png' %></a>
        </center>
    </div>

</div>
